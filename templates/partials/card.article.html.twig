{% for item in articles %}

    <div class="col-4 animate__backInRight animate__animated">
        <div class="card bg-light my-5 shadow">
            <h3 class="card-header">{{item.title | title}}</h3>
            <img height="350px"  src="{{ item.image }}" alt="Card image">
            <div class="card-body">
            <p class="card-text">{{item.content}}</p>
            <a href="#" class="btn btn-primary rounded">Lire la suite</a>
            <div class="my-3">
                <a href="#" class="card-link">{{item.intro}}</a>
            </div>
            </div>
            <div class="card-footer text-muted">
            Il y a 2 jours : {{ "now" | date('Y') }}

            </div>
        </div>
    </div>
{% endfor %}